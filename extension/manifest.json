{
  "name" : "Emojikey: Search and type emoji",
  "short_name" : "Emojikey",
  "manifest_version" : 2,
  "version" : "0.4.5",
  "description" : "Search for and type emojis",
  "icons" : {
    "256" : "heart_256.png"
  },
  "background": {
    "scripts": [
      "jquery-3.0.0.min.js",
      "search.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "19": "heart_grey_19.png",
      "38": "heart_grey_38.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "jquery-3.0.0.min.js",
        "jquery-textrange.js",
        "content.js"
      ]
    }
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
       "windows": "Ctrl+Shift+E",
       "chromeos": "Ctrl+Shift+E",
       "linux": "Ctrl+Shift+E",
       "mac": "Command+E"
      }
    }
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
