{
  "name" : "Emojikey",
  "manifest_version" : 2,
  "version" : "0.4.0",
  "description" : "Search for and type emojis",
  "icons" : { "256" : "heart-eyes.png" },
  "background": {
    "scripts": [
      "jquery-3.0.0.min.js",
      "search.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "jquery-3.0.0.min.js",
        "jquery-textrange.js",
        "content.js"
      ]
    }
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
       "windows": "Ctrl+Shift+E",
       "chromeos": "Ctrl+Shift+E",
       "linux": "Ctrl+Shift+E",
       "mac": "Command+E"
      }
    }
  }
}
